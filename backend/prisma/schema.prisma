generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user{
  id Int @id @default(autoincrement())
  phone String @unique
  name String 
  password String
  addresss String?
}

model Restaurant{
  id Int @id @default(autoincrement())
  name String
  address String
  ownerName String
  contact String
  image String?
  menuItems RestaurantFood[]

}

model Food{
  id Int @id @default(autoincrement())
  name String
  description String
  image String?
  servedAt RestaurantFood[]
  
}

model RestaurantFood{
  id Int @id @default(autoincrement())
  restaurantId Int
  restaurant Restaurant @relation(fields: [restaurantId],references: [id])
  foodId Int
  food Food @relation(fields: [foodId],references: [id])
  price Float
}